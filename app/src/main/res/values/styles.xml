<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tvQuestion" parent="textH5">
        <item name="android:textSize">@dimen/fontSizeQuestion</item>
        <item name="android:layout_margin">@dimen/spacePrimaryHalf</item>
        <item name="android:paddingBottom">@dimen/spacePrimaryHalf</item>
    </style>

    <style name="tvQuestionHint" parent="textH6">
        <item name="android:textSize">@dimen/fontSizeNormal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="tvInputLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/fontSizeNormal</item>
        <item name="android:layout_margin">@dimen/spacePrimaryHalf</item>
    </style>

    <!-- Form Inputs Style -->
    <style name="etInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/spacePrimaryHalf</item>
        <item name="android:padding">@dimen/spacePrimaryHalf</item>
        <item name="android:textSize">@dimen/fontSizeH4</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="cell_highlight">
        <item name="android:textSize">@dimen/fontSizeNormal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:layout_margin">@dimen/spacePrimaryQuarter</item>
        <item name="android:background">@drawable/dl_border_input</item>
    </style>

    <style name="thBordered" parent="cell_highlight">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/dl_bg_cell_table</item>
    </style>

</resources>